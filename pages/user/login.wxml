<view class="page">
  <view class="weui-form">
    <view class="weui-form__text-area">
      <image src="../../style/imgs/logo.png" mode="scaleToFill" class="logo" />
      <view class="weui-form__title">教师登陆</view>
    </view>
    <view class="weui-form__control-area">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells weui-cells_form">
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <label class="weui-label">工号</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请输入工号" bindinput="usernameInput" />
            </view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <label class="weui-label">密码</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" type="password" placeholder="请输入密码" bindinput="passwordInput" />
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-form__opr-area">
      <button type="primary" catchtap="doLogin">登陆</button>
    </view>
    <view class="weui-form__extra-area">
      <include src="../../templates/footer.wxml" />
    </view>
  </view>
</view>